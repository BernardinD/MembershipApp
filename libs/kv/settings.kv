#:import os os

<Settings_cell>:
	orientation: 'horizontal'
	info_color: 1, 1, 1, 1
	btn_color: 1, 1, 1, 1
	btn_text: "Change?"
	BoxLayout:
		# Space between border of layout and elements
		padding: 3
		# Space between each element
		spacing: dp(8)
		Label:
			size_hint_x: 0.33
			color: 0, 0, 0, 1
			canvas.before:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					size: self.size
					pos: self.pos
			#id: testing
			text: root.topic
		Label:
			size_hint_x: 0.33
			color: 0, 0, 0, 1
			canvas.before:
				Color:
					rgba: root.info_color
				Rectangle:
					size: self.size
					pos: self.pos
			#id: testing
			text: root.format_text(root.info, self.width)#os.path.split(root.info)[0]+'\n'+os.path.split(root.info)[1] # if len(root.info) < 
			#text_size: self.width, None
			halign: 'center'
		Button:
			size_hint_x: 0.33
			id: button
			background_color: 1,1,1,1
			text: root.btn_text
			height: sp(40)
			on_release: root.buttons()
		

<Settings_Setup>:
	id: settings
    BoxLayout:
        orientation: 'vertical'
		BoxLayout
			orientation: 'vertical'
			size_hint: 1, 0.80
			Settings_cell:
				topic: "Current sheet"
				id: sheet
			Settings_cell:
				topic: "Primary color"
				id: color
				type: "ColorPicker"
				popup_label: "Press Browse to selection color"
				# Disable picking color for now
				#on_kv_post: self.ids.button.disabled = True
			# Holds file name of logo, but using an image that was copied and saved to absolute-dir
			Settings_cell:
				topic: "Logo"
				id: logo
				type: "FileBrowser"
				popup_label: "Press Browse to find logo"
			Settings_cell:
				topic: "Create new sheet"
				id: create
				info: ""
				info_color: 0,1,1,1
				btn_text: "Create"
			Settings_cell:
				topic: "Sharing (copy email address)"
				id: share
				info: ""
				info_color: 0,1,1,1
				btn_text: "Copy to clipboard"
		BoxLayout
			orientation: 'vertical'
			size_hint: 1, 0.20
			
			BoxLayout:
				size_hint: 1, 0.33
				orientation: 'horizontal'
				Button:
					id: home_button
					text: "Save changes"
					on_release: root.save()
					height: sp(40)
					#disabled: True
				Button:
					id: again_button
					text: "Discard and exit"
					on_release: root.app.on_back()
					height: sp(40)
					
<Change_popup>:
	label: ""
	size_hint: .4, .25
	title: root.label
	title_align: 'center'
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			id: placeholder
			#TextInput:
			#	id: txt
			#	multiline: False
			#	on_text_validate: root.confirm()
			#	halign: 'center'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.5
			Button:
				text: "CONFIRM"
				on_release: root.confirm()
			Button:
				text: "EXIT"
				on_release: root.dismiss()